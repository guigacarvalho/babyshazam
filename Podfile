platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!
# network library
pod 'Alamofire', '~> 3.1.5'

# json object mapper
pod 'AlamofireObjectMapper', '~> 2.1.0'
pod 'ObjectMapper'

# image cache
pod 'Kingfisher', '~> 1.9'

# auto layout
pod 'Cartography', '~> 0.6'

# showing empty state for views
pod 'DZNEmptyDataSet'

# logger
pod 'XCGLogger', '~> 3.2'

# color scheme
pod 'ChameleonFramework/Swift'

# global dispatch queue
pod 'GCDKit', '~> 1.1.7'